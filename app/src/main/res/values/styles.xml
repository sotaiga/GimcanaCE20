<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/color_fosc</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>

        <!--item name="android:background">@color/ocre</item-->
    </style>

    <style name="AppTheme.Splash">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="generic_button" parent="AppTheme">
        <item name="android:layout_width">@dimen/generic_button_width</item>
        <item name="android:layout_height">@dimen/generic_button_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="generic_black_button" parent="generic_button">
        <item name="android:background">@drawable/selector_round_black_button_background</item>
    </style>

    <style name="action_button">
        <item name="android:background">@drawable/selector_action_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/selector_action_button_textcolor</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>

    <style name="h1">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
